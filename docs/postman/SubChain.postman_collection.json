              "host": ["{{base_url}}"],
              "path": ["api", "subscriptions", "invoices", ""]
            }
          },
          "response": []
        },
        {
          "name": "Pay Invoice",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/subscriptions/invoices/{{invoice_id}}/pay/",
              "host": ["{{base_url}}"],
              "path": ["api", "subscriptions", "invoices", "{{invoice_id}}", "pay", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "List Event Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/subscriptions/events/",
              "host": ["{{base_url}}"],
              "path": ["api", "subscriptions", "events", ""]
            }
          },
          "response": []
        }
      ]
    }
  ],
